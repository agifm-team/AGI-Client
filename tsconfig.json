{
  "compilerOptions": {
    "sourceMap": true,
    "jsx": "react",
    "target": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@mods/*": [
        "mods/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "vendor",
    "release",
    ".flatpak"
  ],
  "include": [
    "src",
    "mods",
    "electron"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "extends": "expo/tsconfig.base"
}
